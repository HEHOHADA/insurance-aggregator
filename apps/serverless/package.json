{
  "name": "serverless",
  "version": "0.0.0",
  "license": "MIT",
  "dependencies": {
    "@middy/core": "^4.4.0",
    "@middy/http-json-body-parser": "^4.4.0",
    "aws-lambda": "^1.0.7",
    "server-libs": "workspace:*",
    "uuid": "^9.0.0",
    "pg": "^8.10.0",
    "serverless-postgres": "^2.0.2"
  },
  "scripts": {
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "seed": "prisma migrate reset -f",
    "build": "cross-env NODE_ENV=production node esbuild.config.js",
    "dev": "cross-env NODE_ENV=development serverless offline start",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "deploy:staging": "cross-env NODE_ENV=production serverless deploy",
    "deploy:production": "cross-env NODE_ENV=production serverless deploy --aws-profile $AWS_PROFILE --stage production"
  },
  "prisma": {
    "seed": "node -r @swc-node/register prisma/seed.ts"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.29.0",
    "@types/aws-lambda": "^8.10.114",
    "@types/node": "^18.15.11",
    "cross-env": "^7.0.3",
    "database": "workspace:*",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.14",
    "eslint-config-custom": "workspace:*",
    "prettier-config-custom": "workspace:*",
    "serverless": "^3.29.0",
    "serverless-esbuild": "^1.43.0",
    "serverless-offline": "^12.0.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig": "workspace:*",
    "@types/pg": "latest",
    "typescript": "^5.0.2",
    "@types/uuid": "latest"
  },
  "publishConfig": {
    "access": "public"
  }
}
